@model IEnumerable<And.ETicaret.Core.Entity.Basket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
     <th>Ürün</th>
     <th>Adet</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
       
      
        <td>
           
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<a href="/Siparisver" class="btn btn-primary"><i class="far fa-credit-card"></i>Satın Al</a>
